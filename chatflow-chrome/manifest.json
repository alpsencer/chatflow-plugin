{
    "manifest_version": 2,
    "name": "OpenAI Chat Prompt Populator",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "storage"
    ],
    "options_page": "settings.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://chat.openai.com/*"],
            "js": ["content.js"]
        }
    ]
}
